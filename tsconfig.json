{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "jsx": "preserve",
    "lib": ["dom", "es2015", "es2017"],
    "types": ["node"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "paths": {
      "@components/*": ["./src/components/*"],
      "@images/*": ["./src/images"],
      "@styles/*": ["./src/styles"],
      "@templates/*": ["./src/templates"]
    }
  },
  "include": ["./src/**/*", "./**/*"]
}
